<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".butterknife.ButterKnifeActivity">

    <TextView
        android:id="@+id/tv_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIEST TEXTVIEW" />

    <TextView
        android:id="@+id/tv_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SECOND_TEXTVIEW" />

    <EditText
        android:id="@+id/et_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FIRST_EDITTEXT" />

    <EditText
        android:id="@+id/et_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FIRST_SECOND" />

    <CheckBox
        android:id="@+id/cb_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIRST" />

    <CheckBox
        android:id="@+id/cb_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SECOND" />

    <CheckBox
        android:id="@+id/cb_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THIRD" />

</LinearLayout>